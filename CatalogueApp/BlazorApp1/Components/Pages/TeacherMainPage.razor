@page "/teacher/main"
@inject NavigationManager Navigation

<div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center p-8">
    <div class="max-w-4xl w-full mx-auto">
        <div class="mb-10 text-center">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back, Professor!</h1>
            <p class="text-gray-600">Today's Date: @currentDate.ToString("MMMM dd, yyyy")</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Classes Card -->
            <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 h-full flex">
                <button @onclick="NavigateToClasses"
                        class="w-full px-6 py-8 text-left flex items-center">
                    <div class="flex items-center space-x-4 w-full">
                        <div class="bg-blue-100 p-3 rounded-lg flex-shrink-0">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-semibold text-gray-800">Manage Classes</h3>
                            <p class="text-gray-500 mt-1">View and organize your courses</p>
                        </div>
                    </div>
                </button>
            </div>

            <!-- Repeat similar structure for other cards -->
            <!-- Assignments Card -->
            <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 h-full flex">
                <button @onclick="NavigateToAssignments"
                        class="w-full px-6 py-8 text-left flex items-center">
                    <div class="flex items-center space-x-4 w-full">
                        <div class="bg-blue-100 p-3 rounded-lg flex-shrink-0">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-semibold text-gray-800">Manage Classes</h3>
                            <p class="text-gray-500 mt-1">View and organize your courses</p>
                        </div>
                    </div>
                </button>
            </div>

            <!-- Grades Card -->
            <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 h-full flex">
                <button @onclick="NavigateToGrades"
                        class="w-full px-6 py-8 text-left flex items-center">
                    <div class="flex items-center space-x-4 w-full">
                        <div class="bg-blue-100 p-3 rounded-lg flex-shrink-0">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-semibold text-gray-800">Manage Classes</h3>
                            <p class="text-gray-500 mt-1">View and organize your courses</p>
                        </div>
                    </div>
                </button>
            </div>

            <!-- Students Card -->
            <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 h-full flex">
                <button @onclick="NavigateToStudents"
                        class="w-full px-6 py-8 text-left flex items-center">
                    <div class="flex items-center space-x-4 w-full">
                        <div class="bg-blue-100 p-3 rounded-lg flex-shrink-0">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-semibold text-gray-800">Manage Classes</h3>
                            <p class="text-gray-500 mt-1">View and organize your courses</p>
                        </div>
                    </div>
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private DateTime currentDate = DateTime.Now;

    private void NavigateToClasses() => Navigation.NavigateTo("/teacher/classes");
    private void NavigateToAssignments() => Navigation.NavigateTo("/teacher/assignments");
    private void NavigateToGrades() => Navigation.NavigateTo("/teacher/grades");
    private void NavigateToStudents() => Navigation.NavigateTo("/teacher/students");
}